<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Ingrify" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="colorSecondary">@color/input_hint_color_dark_mode</item>
        <item name="colorSecondaryVariant">@color/input_hint_color_dark_mode</item>
        <item name="colorOnSecondary">@color/black</item>


        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="passwordToggleTint">@color/password_toggle_blue</item>
        <item name="android:textColorPrimary">@color/input_text_color_dark_mode</item>
        <item name="android:textColorHint">@color/input_hint_color_dark_mode</item>
        <item name="colorOnSurface">@color/input_text_color_dark_mode</item>
        <item name="colorSurface">@color/black</item>
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
        <item name="hintTextColor">@color/input_hint_color_dark_mode</item>
        <item name="boxStrokeColor">@color/input_box_stroke_color_dark_mode</item>
        <item name="boxBackgroundColor">@color/input_box_background_color_dark_mode</item>
    </style>
    <style name="Widget.Ingrify.TextInputLayout.NoFloatingHint" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintAnimationEnabled">false</item>
    </style>

</resources>
