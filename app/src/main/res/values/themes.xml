<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Ingrify" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#FFFFFF</item>
        <item name="colorPrimaryVariant">#FFFFFF</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">#E0E0E0</item>
        <item name="colorSecondaryVariant">#E0E0E0</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">#FFFFFF</item>
        <item name="android:navigationBarColor">#FFFFFF</item>
        <item name="android:windowLightStatusBar">true</item>

    </style>
    <style name="CropperTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Toolbar background -->
        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryVariant">#000000</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">#FFFFFF</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="actionMenuTextColor">#FFFFFF</item>
    </style>
    <style name="Theme.Ingrify.SplashScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor">#FFFFFF</item>
        <item name="android:navigationBarColor">#FFFFFF</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="passwordToggleTint">@color/password_toggle_blue</item>
    </style>

    <style name="Theme.Ingrify.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Ingrify.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Ingrify.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
