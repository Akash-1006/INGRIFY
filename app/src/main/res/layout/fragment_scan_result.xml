<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".ScanResultFragment">

    <ImageView
        android:id="@+id/iv_back_button_scan_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:contentDescription="Back"
        android:padding="8dp"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_scan_result_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Scan Result"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/iv_back_button_scan_result"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/score_colour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_scan_result_header"
        android:padding="16dp">

        <!-- Gradient bar + marker -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="20dp">

            <!-- Gradient Bar -->
            <View
                android:id="@+id/hazardBar"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@drawable/hazard_bar"
                android:layout_gravity="center_vertical"/>

            <!-- Blue Indicator -->
            <View
                android:id="@+id/indicator"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/blue_circle"/>
        </FrameLayout>

        <!-- Hazard Label -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/lowHazardLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="Low Hazard"
                android:textColor="#00C853"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/highHazardLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="Potential Hazard"
                android:textColor="#D32F2F"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/allergenWarningText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="12dp"
        android:text="Warning: This product contains allergens."
        android:textColor="@android:color/holo_red_dark"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_bold"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/score_colour"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="visible" />

    <!-- ⚠️ Allergens Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_allergens"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="#D9D9D9"
        app:cardCornerRadius="14dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/allergenWarningText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/allergenTitle"
            app:layout_constraintTop_toBottomOf="@+id/allergenTitle">

            <!-- Expandable allergen list -->

            <TextView
                android:id="@+id/allergenTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="Saved Allergens Found"
                android:textColor="@color/password_toggle_blue"
                android:textSize="18sp"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_expand_allergen"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_right"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:contentDescription="Expand/Collapse Allergens"
                app:layout_constraintBottom_toBottomOf="@id/allergenTitle"
                app:layout_constraintVertical_bias="0.0" />

            <LinearLayout
                android:id="@+id/allergenListLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="20dp"
                android:orientation="vertical"
                android:layout_marginEnd="20dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/allergenTitle"
                tools:visibility="visible">

                <!-- Example Allergen Item -->
                <TextView
                    android:id="@+id/allergenItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="• Limonene"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    tools:text="• Citronellol" />

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_ocr_results"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#D9D9D9"
        app:cardCornerRadius="14dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_allergens">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/OCR_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:id="@+id/Raw_OCR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="Ingredients found in Image"
                android:textColor="@color/password_toggle_blue"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@id/iv_expand_toggle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_expand_toggle"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="Expand/Collapse"
                android:src="@drawable/ic_right"
                app:layout_constraintBottom_toBottomOf="@id/Raw_OCR"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/Raw_OCR"
                app:layout_constraintTop_toTopOf="@id/Raw_OCR" />

            <LinearLayout
                android:id="@+id/cl_collapsible_details"
                android:layout_width="0dp"
               android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/Raw_OCR"
                tools:visibility="visible"
                >

                <TextView
                    android:id="@+id/OCR_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_regular"
                    tools:text="Text"/>


            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_ingredients"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_ocr_results"
        tools:listitem="@layout/item_ingredient" />

</androidx.constraintlayout.widget.ConstraintLayout>