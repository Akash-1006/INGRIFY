<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="4dp"
    android:backgroundTint="#D9D9D9"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_ingredient_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/password_toggle_blue"
            android:fontFamily="@font/poppins_bold"
            app:layout_constraintEnd_toStartOf="@id/iv_expand_toggle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Purified Water" />

        <ImageView
            android:id="@+id/iv_expand_toggle"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="Expand/Collapse"
            android:src="@drawable/ic_right"
            app:layout_constraintBottom_toBottomOf="@id/tv_ingredient_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_ingredient_name" />

        <LinearLayout
            android:id="@+id/cl_collapsible_details"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_ingredient_name"
            tools:visibility="visible">

            <TextView
                android:id="@+id/tv_uses_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Uses:"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/password_toggle_blue"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_ingredient_use"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/poppins_regular"
                android:textSize="16sp"
                tools:text="It's added to keep things fresh and stop germs from growing." />

            <TextView
                android:id="@+id/tv_made_from_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Made from:"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/password_toggle_blue"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_ingredient_made_from"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/poppins_regular"
                android:textSize="16sp"
                tools:text="Made in a Lab." />

            <TextView
                android:id="@+id/tv_side_effects_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Side Effects:"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/password_toggle_blue"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_ingredient_side_effects"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_regular"

                tools:text="Some people's skin can get irritated or have an allergic reaction. It's usually a mild reaction, but it's best to wash it off immediately if you notice irritation." />

            <TextView
                android:id="@+id/tv_allergen_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Allergen:"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/password_toggle_blue"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_ingredient_allergen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_regular"
                tools:text="True." />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>